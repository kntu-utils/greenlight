<!DOCTYPE html>
<html>
  <head>
    <title><%= t('head.title') %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <!-- Open Graph Attributes -->
    <meta property="og:title" content="<%= t('opengraph.title') %>" />
    <meta property="og:description" content="<%= t('opengraph.description') %>" />
    <meta property="og:image" content="<%= branding_image %>" />

    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <% if I18n.locale == :fa %>
      <%= stylesheet_link_tag "application.rtl" %>
    <% else %>
      <%= stylesheet_link_tag "application" %>
    <% end %>

    <%= javascript_include_tag "main", defer: true %>
  </head>

  <body>
    <%= yield %>
  </body>
</html>

